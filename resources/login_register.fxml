<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<!-- fx:controller must point to the fully qualified name of your controller class -->
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #0F0F0F; -fx-border-color: #F7C600; -fx-border-radius: 10; -fx-background-radius: 10;"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stockapp.src.auth.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label fx:id="titleLabel" text="Stock Portfolio App" textFill="#F7C600">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <!-- Message Label for status updates (Success/Failure) -->
    <Label fx:id="messageLabel" text="Please enter your credentials below." textFill="#B0B0B0" wrapText="true" alignment="CENTER" minHeight="40" />

    <VBox spacing="10.0" maxWidth="300.0">
        <Label text="Username" textFill="#F7C600" />
        <TextField fx:id="usernameField" promptText="Enter username" style="-fx-border-color: #F7C600; -fx-border-radius: 5; -fx-control-inner-background: #1F1F1F; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #666666; -fx-padding: 8;"/>

        <Label text="Password" textFill="#F7C600" />
        <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-border-color: #F7C600; -fx-border-radius: 5; -fx-control-inner-background: #1F1F1F; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #666666; -fx-padding: 8;"/>
    </VBox>

    <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="NEVER">
        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="120.0"
                style="-fx-background-color: #F7C600; -fx-text-fill: #0F0F0F; -fx-cursor: hand; -fx-padding: 8 15; -fx-font-weight: bold; -fx-background-radius: 5;"
                text="Login">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefWidth="120.0"
                style="-fx-background-color: #333333; -fx-text-fill: #F7C600; -fx-cursor: hand; -fx-padding: 8 15; -fx-font-weight: bold; -fx-background-radius: 5; -fx-border-color: #F7C600; -fx-border-width: 1;"
                text="Register">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>