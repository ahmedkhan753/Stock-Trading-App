<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<!-- fx:controller must point to the fully qualified name of your controller class -->
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10;"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stockapp.src.auth.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label fx:id="titleLabel" text="Stock Portfolio App" textFill="#2d3748">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <!-- Message Label for status updates (Success/Failure) -->
    <Label fx:id="messageLabel" text="Please enter your credentials below." textFill="#a0a0a0" wrapText="true" alignment="CENTER" minHeight="40" />

    <VBox spacing="10.0" maxWidth="300.0">
        <Label text="Username" textFill="#2d3748" />
        <TextField fx:id="usernameField" promptText="Enter username" style="-fx-border-color: #a0a0aa; -fx-border-radius: 5;"/>

        <Label text="Password" textFill="#2d3748" />
        <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-border-color: #a0a0a0; -fx-border-radius: 5;"/>
    </VBox>

    <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="NEVER">
        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="120.0"
                style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 15;"
                text="Login">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefWidth="120.0"
                style="-fx-background-color: #4a5568; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 15;"
                text="Register">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>