<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>


<BorderPane fx:id="mainPane" prefHeight="700.0" prefWidth="1000.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stockapp.src.auth.DashboardController">
    <top>
        <!-- Top Bar: App Title, User Info, and Logout -->
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="hbox" spacing="10">
            <Label text="Stock Trader App" styleClass="title">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="15.0">
                <Label fx:id="userWelcomeLabel" text="Welcome, [User]!" styleClass="muted">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <!-- Back and Logout buttons -->
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" text="Back" styleClass="back-button" />
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" styleClass="negative" />
            </HBox>
        </HBox>
    </top>
    <left>

        <!-- Left Sidebar: Portfolio Summary and Navigation -->
        <VBox prefWidth="250.0" styleClass="card" spacing="20.0">
            <Label text="Portfolio Summary" styleClass="title">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Separator style="-fx-border-color: #333333;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <Label text="Cash Balance:" textFill="#B0B0B0" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="cashBalanceLabel" text="100,000.00" textFill="#22c55e" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="Total Value:" textFill="#B0B0B0" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="totalValueLabel" text="100,000.00" textFill="#F7C600" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="P/L Today:" textFill="#B0B0B0" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="profitLossLabel" text="+0.00%" textFill="#22c55e" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </GridPane>
            <Separator style="-fx-border-color: #333333;" />


            <!-- Navigation Buttons -->
            <VBox spacing="10">
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="primary" text="View Portfolio" onAction="#showPortfolio" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="button" text="All Transactions" onAction="#showTransactions" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="button" text="Deposit / Withdraw" onAction="#showWallet" />
            </VBox>
        </VBox>
    </left>
    <center>

        <!-- Center Content: Stock List and Trading Form -->
        <VBox spacing="10.0" styleClass="card">
            <Label text="Market Watch" styleClass="title">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <HBox spacing="10.0" VBox.vgrow="NEVER">
                <TextField fx:id="searchField" promptText="Search stocks (e.g., GOOGL, AAPL)" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" styleClass="positive" text="Refresh" onAction="#refreshStockList" />
            </HBox>

            <!-- TableView to display market stocks -->
            <TableView fx:id="stockTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="tickerColumn" prefWidth="100.0" text="Ticker" />
                    <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Company Name" />
                    <TableColumn fx:id="priceColumn" prefWidth="120.0" text="Price (USD)" />
                    <TableColumn fx:id="changeColumn" prefWidth="100.0" text="Change (%)" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Trade Action Bar -->
            <HBox alignment="CENTER" spacing="10.0" styleClass="card">
                <Label text="Selected Stock:" styleClass="title" />
                <Label fx:id="selectedStockLabel" text="N/A" styleClass="label" />
                <Region HBox.hgrow="ALWAYS" />
                <!-- Inline button styling -->
                <Button mnemonicParsing="false" onAction="#handleBuyStock" styleClass="positive" text="BUY" disable="true" fx:id="buyButton" />
                <Button mnemonicParsing="false" onAction="#handleSellStock" styleClass="negative" text="SELL" disable="true" fx:id="sellButton" />
            </HBox>
        </VBox>
    </center>
</BorderPane>